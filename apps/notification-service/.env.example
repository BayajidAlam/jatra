# Server Configuration
PORT=3007
NODE_ENV=development

# Database
DATABASE_URL="postgresql://jatra_user:jatra_password@localhost:5432/jatra_db?schema=public"

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_NOTIFICATION_EXCHANGE=notifications
RABBITMQ_NOTIFICATION_QUEUE=notification_queue

# Email Configuration (Gmail Example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=Jatra Railway <noreply@jatra-railway.com>

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000
